# $Id: PKGBUILD,v 1.1.1.1 2005/02/28 22:22:31 root Exp $
# Maintainer: aurelien <aurelien@archlinux.org>
# Contributor: Aurelien Foret <orelien@chez.com>
pkg=libtar
pkgname=libtar.uc
pkgver=1.2.11
pkgrel=2
pkgdesc="C library for manipulating POSIX tar files"
url="http://www.feep.net/libtar/"
groups=('devel')
depends=('zlib.uc')
source=(ftp://ftp.feep.net/pub/software/$pkg/$pkg-$pkgver.tar.gz \
  libtar-$pkgver.patch)
md5sums=('604238e8734ce6e25347a58c4f1a1d7e' '8168d13f3343623b24ab2b06c31b9d7e')

build() {
  cd $startdir/src/$pkg-$pkgver
  patch -Np1 -i ../libtar-$pkgver.patch || return 1
  # CPPFLAGS required only because gcc is not built for /usr
  #CPPFLAGS=-I/usr/include ./configure --prefix=/usr
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
}
